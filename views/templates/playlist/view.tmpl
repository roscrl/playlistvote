{{define "playlist_view" }}
    <div class="flex justify-center mt-1">
        <a href="/" class="uppercase text-xs hover:underline">
            Playlist Vote
        </a>
    </div>
    <div class="flex items-center justify-center mt-[10px]">
        <a href="{{ .playlist.URI | safeURL }}" class="shrink-0 w-[300px] h-[300px] rounded-[6px] relative">
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[calc(100%+5px)] h-[calc(100%+5px)] -z-10"
                 style="background-image: linear-gradient(45deg,
                 {{ index .playlist.ColorsCommonFour 0  }},
                 {{ index .playlist.ColorsCommonFour 1  }},
                 {{ index .playlist.ColorsCommonFour 2  }},
                 {{ index .playlist.ColorsCommonFour 3  }}
                         );
                         filter: blur(10px);
                         opacity: 0.7;
                         box-shadow: 0 0 20px rgba(0, 0, 0, 0.5)">
            </div>

            <img src="{{ .playlist.LargestImageURL }}"
                 class="w-[300px] h-[300px] rounded-[6px] object-cover"
                 alt="{{ .playlist.Name }} playlist image"
                 loading="eager">

        </a>
    </div>

    <div class="mt-3 mb-[60px] lg:mb-[100px]">
        <div class="flex justify-center">
            <a href="{{ .playlist.URI | safeURL }}" class="text-2xl ml-2 text-center block hover:underline">{{ .playlist.Name }}</a>
        </div>

        <div class="flex items-center justify-center my-2 text-sm">
            <a href="{{.playlist.Owner.URI | safeURL }}" class="ml-0.5 max-w-[130px] truncate hover:underline flex items-center z-20">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 shrink-0">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"/>
                </svg>
                <span class="ml-[2px] truncate">{{.playlist.Owner.DisplayName}}</span>
            </a>

            <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 ml-1 shrink-0">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"/>
                </svg>
                <span class="ml-0.5">
                {{ formatNumberInK .playlist.Followers.Total}}
                </span>
            </div>
        </div>

        <div class="flex w-full lg:justify-center md:mx-auto mt-2 lg:mt-6 xl:w-3/4">
            <div class="grid w-full grid-cols-1 md:mx-2 md:grid-cols-3 xl:grid-cols-4 xl:grid-cols-5 gap-[1px]">
                {{ $playlistURI := .playlist.URI }}
                {{ range .playlist.Tracks.Items }}
                    <button {{if not .Track.PreviewURL}}disabled{{end}} class="w-full flex justify-between z-0 relative
                    p-1 px-3 lg:px-1
                    rounded-sm lg:rounded-[6px]
                    lg:self-start
                    text-left items-center
                    {{if .Track.PreviewURL}}
                        active:bg-gray-100 lg:active:bg-gray-200 lg:hover:bg-gray-100
                    {{else}}
                        opacity-50 cursor-not-allowed
                    {{end}}
                    " data-track data-preview-url="{{.Track.PreviewURL}}" data-album-image="{{.Track.SmallestAlbumImageURL}}" data-album-uri="{{ .Track.Album.URI | safeURL }}" data-track-uri="{{ .Track.URI | safeURL }}" data-playlist-uri="{{ $playlistURI | safeURL }}">
                        <div class="flex grow-0 w-full overflow-hidden">
                            <a onclick="event.stopPropagation()" href="{{ .Track.Album.URI | safeURL }}" class="z-10 shrink-0">
                                <img src="{{.Track.SmallestAlbumImageURL}}" class="h-[40px] w-[40px] rounded-[4px] bg-gray-200" loading="eager"/>
                            </a>

                            <div class="ml-[6px] flex flex-col self-center overflow-hidden leading-tight">
                                <div class="inline-flex">
                                    <a onclick="event.stopPropagation()" href="{{ .Track.URI | safeURL }}" class="hover:underline z-10 text-md text-ellipsis whitespace-nowrap overflow-hidden shrink block" data-name="{{.Track.Name}}">
                                        {{ .Track.Name }}
                                    </a>
                                </div>

                                <div class="flex block text-xs overflow-hidden leading-tight text-ellipsis">
                                    {{$artists := .Track.Artists}}
                                    {{ range $index, $element := .Track.Artists}}
                                        <a onclick="event.stopPropagation()" href="{{ $element.URI | safeURL }}" class="flex z-10 hover:underline block overflow-hidden" data-artists="{{ $element.Name }}">
                                            {{if $index}}<span class="mr-1 hover:underline-none">,</span>{{end}}
                                            <span class="hover:underline truncate text-ellipsis overflow-hidden">{{ $element.Name }}</span>
                                        </a>
                                    {{end}}
                                </div>
                            </div>
                        </div>
                    </button>
                {{ end }}
            </div>
        </div>
    </div>
{{ end }}

{{template "layout.tmpl" .}}

{{define "content"}}
    {{ template "playlist_view" .}}
{{end}}
