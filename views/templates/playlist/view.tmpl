{{define "playlist_view" }}
    <div class="flex justify-center mt-1">
        <a href="/" class="uppercase text-xs hover:underline">
            Playlist Vote
        </a>
    </div>
    <div class="flex items-center justify-center mt-[10px]">
        <a href="{{ .playlist.URI | safeURL }}" class="shrink-0 w-[300px] h-[300px] rounded-[6px] relative">
            <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-[calc(100%+5px)] h-[calc(100%+5px)] -z-10"
                 style="background-image: linear-gradient(45deg,
                 {{ index .playlist.ColorsCommonFour 0  }},
                 {{ index .playlist.ColorsCommonFour 1  }},
                 {{ index .playlist.ColorsCommonFour 2  }},
                 {{ index .playlist.ColorsCommonFour 3  }}
                         );
                         filter: blur(10px);
                         opacity: 0.7;
                         box-shadow: 0 0 20px rgba(0, 0, 0, 0.5)">
            </div>

            <img src="{{ .playlist.LargestImageURL }}"
                 class="w-[300px] h-[300px] rounded-[6px] object-cover"
                 alt="{{ .playlist.Name }} playlist image"
                 loading="eager">

        </a>
    </div>

    <div class="mt-3 mb-[60px] lg:mb-[100px]">
        <div class="flex justify-center">
            <a href="{{ .playlist.URI | safeURL }}" class="text-2xl ml-2 text-center block hover:underline">{{ .playlist.Name }}</a>
        </div>

        <div class="flex items-center justify-center my-2 text-sm">
            <a href="{{.playlist.Owner.URI | safeURL }}" class="ml-0.5 max-w-[130px] truncate hover:underline flex items-center z-20">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 shrink-0">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z"/>
                </svg>
                <span class="ml-[2px] truncate">{{.playlist.Owner.DisplayName}}</span>
            </a>

            <div class="flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-3 h-3 ml-1 shrink-0">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z"/>
                </svg>
                <span class="ml-0.5">
                {{ formatNumberInK .playlist.Followers.Total}}
                </span>
            </div>
        </div>

        <div class="flex w-full lg:justify-center md:mx-auto mt-2 lg:mt-6 xl:w-3/4">
            <div class="grid w-full grid-cols-1 md:mx-2 md:grid-cols-3 xl:grid-cols-4 xl:grid-cols-5 gap-[1px]">
                {{ range .playlist.Tracks.Items }}
                    <button {{if not .Track.PreviewURL}}disabled{{end}} class="w-full flex justify-between z-0 relative
                    p-1 px-3 lg:px-1
                    rounded-sm lg:rounded-[6px]
                    lg:self-start
                    text-left items-center
                    {{if .Track.PreviewURL}}
                        active:bg-gray-100 lg:active:bg-gray-200 lg:hover:bg-gray-100
                    {{else}}
                        opacity-50 cursor-not-allowed
                    {{end}}
                    " data-track data-preview-url="{{.Track.PreviewURL}}" data-album-image="{{.Track.SmallestAlbumImageURL}}" data-album-uri="{{ .Track.Album.URI | safeURL }}" data-track-uri="{{ .Track.URI | safeURL }}">
                        <div class="flex grow-0 w-full overflow-hidden">
                            <a href="{{ .Track.Album.URI | safeURL }}" class="z-10 shrink-0">
                                <img src="{{.Track.SmallestAlbumImageURL}}" class="h-[40px] w-[40px] rounded-[4px] bg-gray-200" loading="eager"/>
                            </a>

                            <div class="ml-[6px] flex flex-col self-center overflow-hidden leading-tight">
                                <div class="inline-flex">
                                    <a onclick="event.stopPropagation()" href="{{ .Track.URI | safeURL }}" class="hover:underline z-10 text-md text-ellipsis whitespace-nowrap overflow-hidden shrink block" data-name="{{.Track.Name}}">
                                        {{ .Track.Name }}
                                    </a>
                                </div>

                                <div class="flex block text-xs overflow-hidden leading-tight text-ellipsis">
                                    {{$artists := .Track.Artists}}
                                    {{ range $index, $element := .Track.Artists}}
                                        <a onclick="event.stopPropagation()" href="{{ $element.URI | safeURL }}" class="flex z-10 hover:underline block overflow-hidden" data-artists="{{ $element.Name }}">
                                            {{if $index}}<span class="mr-1 hover:underline-none">,</span>{{end}}
                                            <span class="hover:underline truncate text-ellipsis overflow-hidden">{{ $element.Name }}</span>
                                        </a>
                                    {{end}}
                                </div>
                            </div>
                        </div>
                    </button>
                {{ end }}
            </div>
        </div>
    </div>
{{ end }}

{{template "layout.tmpl" .}}

{{define "content"}}
    {{ template "playlist_view" .}}
{{end}}

{{ if .first_track_with_preview_url}}
    <div id="playerbar" data-turbo-permanent data-controller="playerbar" class="fixed z-20 bg-slate-900 text-white bottom-1 left-1 right-1 lg:left-1/2 lg:transform lg:mb-[30px] lg:-translate-x-1/2 lg:w-[500px] h-[50px] rounded-[4px] lg:drop-shadow-lg">
        <div class="flex w-full justify-between items-center">
            <div class="flex items-center min-w-0">
                <a class="shrink-0" data-playerbar-target="currentlyPlayingTrackAlbumUri" href="{{ .first_track_with_preview_url.Album.URI | safeURL }}">
                    <img data-playerbar-target="currentlyPlayingTrackAlbumImage" src="{{ .first_track_with_preview_url.SmallestAlbumImageURL }}" class="w-[50px] h-[50px] p-[2px] rounded-[5px]" loading="eager">
                </a>
                <div class="ml-2 text-md flex-col truncate overflow-hidden">
                    <div>
                        <a data-playerbar-target="currentlyPlayingTrack" href="{{ .first_track_with_preview_url.URI | safeURL }}" class="hover:underline z-10 text-md text-ellipsis whitespace-nowrap overflow-hidden shrink block truncate">
                            {{.first_track_with_preview_url.Name}}
                        </a>
                    </div>

                    <div data-playerbar-target="currentlyPlayingTrackArtists" class="flex block text-xs truncate leading-tight">
                        {{$artists := .first_track_with_preview_url.Artists}}
                        {{ range $index, $element := .first_track_with_preview_url.Artists}}
                            <a onclick="event.stopPropagation()" href="{{ $element.URI | safeURL }}" class="flex z-10" data-artists="{{ $element.Name }}">
                                {{if $index}}<span class="mr-1 hover:underline-none">,</span>{{end}}
                                <span class="hover:underline">{{ $element.Name }}</span>
                            </a>
                        {{end}}
                    </div>
                </div>
            </div>
            <div class="flex shrink-0">
                <audio data-playerbar-target="audio" src="{{.first_track_with_preview_url.PreviewURL}}" preload="auto" loop></audio>
                <a href="{{ .playlist.URI | safeURL }}" id="open-playlist-in-spotify" class="flex mr-1 text-xs items-center gap-[4px] mr-2 ml-2">
                    <svg width="23" height="23" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                              d="M38.1966 21.2764C30.4604 16.6821 17.6998 16.2597 10.3146 18.5011C9.12845 18.861 7.87433 18.1915 7.51523 17.0056C7.15585 15.8189 7.82446 14.5656 9.01123 14.2051C17.4891 11.6318 31.5819 12.1288 40.4879 17.4155C41.5549 18.0488 41.9045 19.4265 41.2723 20.4914C40.6395 21.5581 39.2607 21.9098 38.1966 21.2764ZM37.9433 28.0812C37.4005 28.9619 36.249 29.2381 35.3694 28.6973C28.92 24.733 19.0848 23.5843 11.4544 25.9005C10.4651 26.1994 9.41991 25.6417 9.11927 24.6539C8.82122 23.6645 9.37921 22.6214 10.3671 22.3204C19.0837 19.6752 29.9199 20.9563 37.3277 25.5088C38.2072 26.0504 38.4841 27.2025 37.9433 28.0812ZM35.0066 34.6163C34.5753 35.3236 33.6545 35.5451 32.9498 35.1141C27.314 31.6696 20.2203 30.8918 11.8662 32.7999C11.0612 32.9844 10.2588 32.48 10.0753 31.6753C9.89077 30.8703 10.3935 30.0678 11.2002 29.8841C20.3424 27.7943 28.1844 28.6936 34.5102 32.5591C35.2155 32.9899 35.4376 33.9113 35.0066 34.6163ZM23.9999 0C10.7454 0 0 10.7451 0 23.9996C0 37.2555 10.7454 48 23.9999 48C37.2549 48 48 37.2555 48 23.9996C48 10.7451 37.2549 0 23.9999 0Z"
                              fill="white"/>
                    </svg>
                    <span class="block uppercase text-xs">Open Spotify</span>
                </a>
                <button data-playerbar-target="playOrPause" data-action="click->playerbar#togglePlay" class="mr-1">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-8 h-8">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 5.653c0-.856.917-1.398 1.667-.986l11.54 6.348a1.125 1.125 0 010 1.971l-11.54 6.347a1.125 1.125 0 01-1.667-.985V5.653z"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
{{end}}